<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_baru"
    tools:context=".fragments.ChatFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/gambar_pasien" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/greetings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="Hello!"
                android:textColor="#FFF"
                android:textSize="50dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/patient_chat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rizky Chandra"
                android:textColor="#FFF"
                android:textSize="35dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/doctor_card_label"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/doctor_image_chat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/gambar_dokter"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/doctor_chat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="dr. Anita D."
                    android:textSize="25dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="RS UB"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_marginTop="250dp">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/chat_card"
            android:padding="20dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/chat_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardBackgroundColor="#000000ff"
            app:cardElevation="0dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/add_button_chat"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_add_button"
                    android:layout_margin="5dp"
                    />

                <EditText
                    android:id="@+id/edit_message_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="Message"
                    android:inputType="text"
                    android:layout_weight="1"
                    android:background="@drawable/et_bg"
                    android:padding="5dp"
                    />

                <Button
                    android:id="@+id/send_button_chat"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_send_button"
                    android:layout_margin="5dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>